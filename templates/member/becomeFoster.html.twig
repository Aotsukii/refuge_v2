<html>
    <head>
        <meta charset="UTF-8">
        <title>Devenir Famille d'accueil</title>
        <meta name="viewport" content="width=device-width, user-scalable=no">

        {% include "partials/member_header.html.twig" %}

    </head>
    <body>
        <h1 class="text-center mt-5  text-white">Devenir famille d'accueil</h1>
       <div class="container mt-5">
            <div class="row">
            </div>
            <div class="row mt-5">
                <div class="col-sm-4"></div>
                <div class="col-sm-4 border shadow slightlyOpaque rounded bg-white">
                    {{ form_start(memberToFosterForm) }}
                        <div class="form-group">
                            <label for="animalType">Type de logement</label>
                            {{ form_errors(memberToFosterForm.houseType) }}
                            {{ form_widget(memberToFosterForm.houseType) }}
                        </div>
                        
                        <div class="form-group">
                            <label for="animalType">Taille du logement</label>
                            {{ form_errors(memberToFosterForm.houseSize) }}
                            {{ form_widget(memberToFosterForm.houseSize) }}
                        </div>

                        <div class="form-group">
                            {{ form_errors(memberToFosterForm.hasDog) }}
                            {{ form_widget(memberToFosterForm.hasDog) }}
                            {{ form_errors(memberToFosterForm.hasCat) }}
                            {{ form_widget(memberToFosterForm.hasCat) }}
                            {{ form_errors(memberToFosterForm.hasKid) }}
                            {{ form_widget(memberToFosterForm.hasKid) }}
                        </div>

                        <div class="form-group d-inline-block">
                            {{ form_errors(memberToFosterForm.canQuarantine) }}
                            {{ form_widget(memberToFosterForm.canQuarantine) }}
                        </div>
                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-primary m-*-auto">C'est parti !</button>
                        </div>
                    {{ form_end(memberToFosterForm) }}
                </div>
            </div>
        </div>
    </body>
</html>