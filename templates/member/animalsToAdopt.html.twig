                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>
                            <button class="btn btn-success"  data-toggle="modal" data-target="#moreInformations"><i class="fas fa-info"></i></button>
                            <button class="btn btn-danger"  data-toggle="modal" data-target="#submitAdoptionForm"><i class="fas fa-heart"></i></button>
                        </td>

                        </tr>
