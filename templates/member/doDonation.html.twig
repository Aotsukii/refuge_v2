<html>
    <head>
        <meta charset="UTF-8">
        <title>Effectuer une donation</title>
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <link rel="stylesheet" href="/css/bootstrap.css">
        <link rel="stylesheet" href="/css/general.css">
        <link rel="stylesheet" href="/css/hover.css">
        <link rel="stylesheet" href="/css/admin.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/6576995845.js" crossorigin="anonymous"></script>

        {% include "partials/member_header.html.twig" %}

    </head>
    <body>
        <h1 class="text-center mt-5">Effectuer une donation</h1>
        
       <div class="container">
            <form method="POST">
                <div class="row mt-5">
                    <div class="col-sm-3"></div>

                    <div class="col-sm border shadow">
                        <label for="inputEmail">Montant :</label>
                        <input style="display:flex;" type="number" name="amount" id="inputAmount" class="form-control" required autofocus>
                        <br>
                        <input type="checkbox" aria-label="Checkbox for following text input">
                        <label>Faire un don anonyme</label>
                        <div class="d-flex justify-content-center col-lg-12 mt-1">
                            <button class="btn btn-success shadow center-block mb-2" type="submit">
                                Donner !
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-3"></div>

                    </div>
                </div>

            </form>
        </div>
    </body>

    <div class="modal fade" id="addAnimalModalForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
            </div>
        </div>
    </div>
</html>
{% endif %}