{% if is_granted('ROLE_ADMIN') %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>Liste des animaux Ã  l'adoption</title>
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <link rel="stylesheet" href="/css/bootstrap.css">
        <link rel="stylesheet" href="/css/general.css">
        <link rel="stylesheet" href="/css/hover.css">
        <link rel="stylesheet" href="/css/admin.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/6576995845.js" crossorigin="anonymous"></script>

        {% include "partials/admin_header.html.twig" %}

    </head>
    <body>
        <h1 class="text-center mt-5">Liste des donations</h1>
        <div class="container border shadow mt-5">

            <div class="row mt-5">
                <div class="col-sm">
                    <table class="table table-striped">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Montant</th>
                        <th scope="col">Date</th>
                        <th scope="col">Donateur</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for donation in donations %}
                        <tr>
                            <th scope="row">{{donation.id}}</th>
                            <td>{{donation.amount}}</td>
                            <td>{{donation.date}}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <th scope="row">No donations yet !</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
{% endif %}