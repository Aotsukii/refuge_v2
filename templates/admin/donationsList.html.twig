<html>
    <head>
        <meta charset="UTF-8">
        <title>Liste des animaux à l'adoption</title>
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <link rel="stylesheet" href="/css/bootstrap.css">
        <link rel="stylesheet" href="/css/general.css">
        <link rel="stylesheet" href="/css/hover.css">
        <link rel="stylesheet" href="/css/admin.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/6576995845.js" crossorigin="anonymous"></script>

        {% include "partials/admin_header.html.twig" %}

    </head>
    <body>
        <h1 class="text-center mt-5">Liste des donations</h1>
        <div class="container border shadow mt-5">

            <div class="row mt-5">
                <div class="col-sm">
                    <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                        <th scope="col"><i class="fas fa-sort"></i> #</th>
                        <th scope="col"><i class="fas fa-sort"></i> Montant</th>
                        <th scope="col"><i class="fas fa-sort"></i> Date</th>
                        <th scope="col"><i class="fas fa-sort"></i> Donateur</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if donations|length != 0 %}
                        {% for i in 0..donations|length-1 %}
                            <tr>
                                <th scope="row">{{donations[i].id}}</th>
                                <td>{{donations[i].amount}}€</td>
                                <td>{{donations[i].date.format('d/m/Y')}}</td>
                            <td>{{donationsIds[i]}}</td>
                            </tr>   
                        {% endfor %}
                    {% else %}
                        <tr>
                            <th>Aucune donation !</th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endif %}
                    {# {% else %}
                        <tr>
                            <th scope="row">No donations yet !</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr> #}
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
<script>
    $(document).ready(function () {
        $('#selectedColumn').DataTable({
            "scrollY": "350px",
            "scrollCollapse": true,
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>
