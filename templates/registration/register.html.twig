{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="container">

        {{ form_start(registrationForm) }}
        <div class="d-flex justify-content-center">
            <div class="row col-lg-6 mb-4 p-3  border rounded shadow bg-white slightlyOpaque"  style="margin-top: 25%">
                <h1 class="text-center">Création de compte</h1>

                <div class="">
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="">Email</label><br>
                            {{ form_errors(registrationForm.email) }}
                            {{ form_widget(registrationForm.email) }}
                        </div>
                        <div class="col-lg-12">
                            <label for="">Mot de passe</label><br>
                            {{ form_widget(registrationForm.plainPassword) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            {{ form_widget(registrationForm.checkPassword) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            {{ form_widget(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center col-lg-12">
                    <button class="btn btn-primary shadow center-block mt-2">S'enregister</button>
                </div>
               
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
